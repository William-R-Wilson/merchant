<h1>Your Order</h1>

<table>
  <tr>
    <th>Customer</th>
    <td><%= @order.user_id %></td>
  </tr>
  <tr>
    <th>Status:</th>
    <td><%= @order.order_items.count %></td>
  </tr>
  <tr>
    <th>Items</th>
    <th>Title</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Subtotal</th>
    <th>Order Total</th>
  </tr>
  <% @order.order_items.each do |item| %>
    <tr>
      <td><%= image_tag "products/#{item.product.image_url}" %></td>
      <td><%= item.product.title %></td>
      <td><%= item.quantity %></td>
      <td><%= print_price(item.product.price) %></td>
      <td><%= print_price(item.subtotal) %></td>
      <td><%= print_price(@order.total) %></td>
      <td><%= link_to "delete", item, method: :delete, data: { confirm: "Are you sure you want to delete this item from the order?" } %></td>
    </tr>
      
  <% end %>
  <%= link_to "Delete order", @order, method: :delete, data: { confirm: "Are you sure?" } %>
</table>